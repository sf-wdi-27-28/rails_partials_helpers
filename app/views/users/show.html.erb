<h1>User Profile</h1>
<hr>
<p><strong>Email:</strong> <%= @user.email %></p>
<p class="small text-muted">Joined <%= time_ago_in_words(@user.created_at) %> ago</p>

<!-- only let user who owns this account see edit/delete buttons -->
<% if current_user && current_user == @user %>
  <hr>
  <p>
    <%= link_to 'Edit Profile', edit_user_path(@user), html_options = {:class => 'btn btn-default' } %>
    <%= link_to 'Delete Profile', user_path(@user), html_options = {method: :delete,:class => 'btn btn-default' } %>
  </p>
<% end %>

<% if @user.recipes.any? %>
  <br>
  <h4>User's Recipes</h4>
  <hr>
  <% @user.recipes.each do |recipe| %>
    <strong><%= recipe.name %></strong> -  <%= link_to 'View Recipe', recipe_path(recipe) %>
    <hr>
  <% end %>
<% end %>
